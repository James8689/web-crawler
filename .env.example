OPENAI_API_KEY=xxxx
PINECONE_API_KEY=xxxxx
# Customer identifier (used to generate default index name if PINECONE_INDEX_NAME is not set)
CUSTOMER_ID=west_hills_vineyards
PINECONE_ENVIRONMENT=us-east-1
# Pinecone index name (if not set, the script defaults to rag-{CUSTOMER_ID.lower()})
PINECONE_INDEX_NAME=west_hills_vineyards
# Namespace for upserting records into the Pinecone index
NAMESPACE=default
# Embedding model to use (Pinecone-hosted model, e.g., llama-text-embed-v2)
EMBEDDING_MODEL=llama-text-embed-v2
# Chunking parameters (in characters)
CHUNK_SIZE=500
CHUNK_OVERLAP=75
# Output directory for dry run mode (where processed JSON files will be saved)
OUTPUT_DIR=processed_content